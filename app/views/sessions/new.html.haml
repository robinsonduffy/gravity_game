%div.col-xs-4.col-xs-offset-4
  
  = form_tag(sessions_path,{:class => 'form-signin', :role => 'form'}) do
    = text_field_tag :email, params[:email], {:class => 'form-control', :placeholder => 'Email Address', :required => 'required', :autofocus => 'autofocus'}
    = password_field_tag :password, nil, {:class => 'form-control', :placeholder => 'Password', :required => 'required'}
    %button.btn.btn-lg.btn-primary.btn-block{:type => 'submit'} Sign in