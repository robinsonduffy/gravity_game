!!! 5
%html
  %head
    %title= title
    = stylesheet_link_tag "main.css"
    = yield :custom_css
    = javascript_include_tag "jquery.min.js"
    = javascript_include_tag "jquery-ui.js"
    = javascript_include_tag "jquery_ujs.js"
    = javascript_include_tag "application.js"
    = yield :custom_js
    = csrf_meta_tag
  %body
    %div#header
      %ul#user-navigation
      - if current_user
        %div#user-coins.drop-shadow
          %a{:href => transactions_path}
            %img{:src => '/imgs/shared/coin_green.png'}
            %span#user-coins-current= current_user.coins
            %br
            %span#user-coins-manage-coins Manage Coins
    %div#content-wrapper
      %h1.title= (@title.nil?) ? @base_title : @title
      %div#flash-messages
        - flash.each do |type, message|
          %div{:class => ["flash", type]}= message
      %div#content= yield
    %div#coin-float-message
    - unless params[:cdisp].to_s.blank?
      :javascript
        float_coin_message("#{params[:cdisp]}")
    %div#debug-info= debug(params) if Rails.env.development?