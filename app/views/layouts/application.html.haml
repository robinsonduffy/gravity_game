!!! 5
%html
  %head
    %title= title
    = stylesheet_link_tag "main.css"
    = yield :custom_css
    = javascript_include_tag "jquery.min.js"
    = #javascript_include_tag "jquery-ui.js"
    = javascript_include_tag "jquery_ujs.js"
    = yield :custom_js
    = csrf_meta_tag
  %body
    %div#header
      %ul#user-navigation
        %li#user-coins
          %a
            %img{:src => '/imgs/shared/coin_green.png'}
            %span#user-coins-current= @game_user.coins
    %div#content-wrapper
      %h1.title= (@title.nil?) ? @base_title : @title
      %div#flash-messages
        - flash.each do |type, message|
          %div{:class => ["flash", type]}= message
      %div#content= yield
    %div#debug-info= debug(params) if Rails.env.development?